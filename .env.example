# Backend Environment Variables
PORT=8000
ENVIRONMENT=development
DATABASE_URL=sqlite:///./database.db
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=104857600
DEBUG=false

# Frontend Environment Variables
NEXT_PUBLIC_API_URL=http://localhost:8000

# Production Environment Variables (for Railway/Vercel)
# NEXT_PUBLIC_API_URL=https://your-backend-url.railway.app
# DATABASE_URL=sqlite:///./production.db
# ENVIRONMENT=production

# Optional: Computer Vision Tuning
BALL_DETECTION_CONFIDENCE=0.5
POSE_DETECTION_CONFIDENCE=0.7
TOUCH_DISTANCE_THRESHOLD=50

# Optional: Video Processing
MAX_VIDEO_DURATION=300
VIDEO_QUALITY_TARGET=720
FRAME_SKIP_RATIO=2

# Optional: Training Data Collection
YOUTUBE_SCRAPING_ENABLED=false
TRAINING_DATA_DIR=./training_data
MAX_TRAINING_VIDEOS=100