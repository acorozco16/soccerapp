# Backend Configuration
ENVIRONMENT=development
DEBUG=true

# API Settings
API_HOST=0.0.0.0
API_PORT=8000

# Upload Settings
MAX_UPLOAD_SIZE_MB=100
ALLOWED_VIDEO_EXTENSIONS=.mp4,.mov
MIN_VIDEO_DURATION_SECONDS=10
MAX_VIDEO_DURATION_SECONDS=300

# Processing Settings
PROCESSING_TIMEOUT_SECONDS=180
FRAME_SKIP=3
TARGET_VIDEO_WIDTH=1280
MAX_PROCESSING_FPS=30

# Touch Detection Settings
TOUCH_THRESHOLD_PIXELS=50
DEBOUNCE_TIME_SECONDS=0.5
MIN_BALL_VELOCITY_PIXELS=5

# File Storage
CLEANUP_DAYS=7
KEEP_DEBUG_FRAMES=true

# Database
DATABASE_URL=sqlite:///./soccer_analysis.db

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173